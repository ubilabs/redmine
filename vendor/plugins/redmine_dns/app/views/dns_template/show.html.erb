<p>new template</p>
<div class="box tabular">
  <% form_for :dns_template, :url => { :action => :create}  do |f| %>
  <%= f.error_messages %>
  <p>
    <label><%= l(:label_template_name) %>:</label>
    <%= f.text_field :name %>
    <!--input size="30" type="text" id="template_name" name="name" /-->
  </p>
  <p>
    <label><%= l(:label_template_desc) %>:</label>
    <%= f.text_area :desc, :rows => 4 %>
    <!--textarea rows="3" cols="39" id="template_desc" name="desc" ></textarea-->
 </p>
  <p>
    <input type="submit" value="Save" name="save"/>
  </p>
  <p style="padding-left: 8px">
  <table>
    <tbody>
    <% @tmpl.records.each_with_index do |rec, count| %>
      <%=  render :partial => 'template_record',
                  :locals => {:count=>count.to_s, :zone => @zone, :record => rec } %>
    <% end %>
    </tbody>
  </table>
  </p>
<% end %>
</div>