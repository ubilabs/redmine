<div class="contextual">
<%= link_to l(:label_dns_add), {:controller => 'dns_provider', :action => 'add'}, :class => 'icon icon-add' %>
</div>
<h2>Dns Providers</h2>

<% form_remote_tag(:html => { :action => url_for(:controller => "dns_provider", :action => "select_provider")}) do %>
  <fieldset><legend><%= l(:label_filter_plural) %></legend>
    <label>provider :</label>
    <%= select_tag 'provider',providers_for_select(@providers),
      :class => "small", :onchange => "this.form.submit(); return false;"  %>
<% end %>
    <label><%= l(:label_domain) %>:</label>
    <%= select_tag 'domain', domains_for_select(@domains), :class => "small" %>
    <%=  observe_field(:domain, :url => {:action => :select_domain}, :with =>"Form.Element.serialize('provider')+'&'+Form.Element.serialize('domain')", :update => :zone_status) %>
  </fieldset>
<div id="zone_status"></div>
